<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category_Page">

    <!-- res/layout/category.xml -->
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/categoryGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:context=".YourActivity"
        tools:ignore="MissingConstraints">

        <!-- Sample grid item layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- ImageView for the category image -->
            <ImageView
                android:id="@+id/categoryImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_screen" />

            <!-- Add any other views for category information if needed -->
            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Repeat the above layout for each grid item -->

    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>